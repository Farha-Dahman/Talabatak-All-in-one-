      <div class="">
        <h2 class="copy">Sign up</h2>

            <% if(typeof err !='undefined' ){ %>
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <strong> Error </strong>
                    <%= err %>.
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
                <% } %>

                    <form id="sign-up"action="/signup" method="POST">
                        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                        <div class="input-container email">
                            <label for="email">Enter Your Email</label>
                            <input  type="email" class="" name="email" id="email"
                                autocomplete="off" placeholder="Email">
                        </div>
                        <div class="input-container name">
                            <label for="username">Choose A Username</label>
                            <input type="text" name="username" id="username"
                                autocomplete="off" placeholder="Username">
                        </div>
                        <div class="input-container password">
                            <label for="password">Choose A Password</label>
                            <input type="password"  name="password" id="password"
                                autocomplete="off" placeholder="Password">
                         <p id="message" style="color:red;display:none; font-size:80%;">Use password between 8 to 24 characters at least one numeric digit, one uppercase and one lowercase letter and syumbols!!</p>
                        </div>
                        <div class="input-container password">
                            <label for="confirmpassword">Confirm Your Password</label>
                            <input type="password" name="confirmpassword"
                                id="confirmpassword" autocomplete="off" placeholder="Confirm Password">
                        </div>
                        <div class="d-grid gap-3 mb-3">
                            <input type="submit" id="submit" class="signup-btn" value="Sign Up">
                        <button class="google" ><a class="" href="">Continue With Google</a></button>   
                        </div>
                        <p>Already Registered ? <a class="card-link" href="/login">LOGIN Here</a> </p>
                    </form>
        
        </div>
